<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/honeygaincase038_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"

            android:elevation="6dp"
            app:cardCornerRadius="50dp"
            app:strokeColor="#000"
            app:strokeWidth="2dp">

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:src="@drawable/honeygaincase038_logo">

            </ImageView>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:text="HoneyGain: Task-Based Opportunities"
        android:textColor="@color/black"
        android:layout_above="@id/lt"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:textStyle="bold">

    </TextView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lt"
        style="@style/Theme.honeygain.Lottie3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@id/prg"
        android:layout_marginBottom="30dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <ProgressBar
        android:id="@+id/prg"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/honeygaincase038_progess_gradient_splash"
        android:progress="100"
        android:progressDrawable="@drawable/honeygaincase038_progess_gradient_splash" />


</RelativeLayout>