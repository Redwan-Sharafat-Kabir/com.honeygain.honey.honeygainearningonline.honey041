<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/honeygaincase038_linearlayout" />



    <LinearLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/bg"
        android:weightSum="2">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#FFFFB633"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="20dp"
                            android:gravity="center"
                            android:text="Unlock in 3 steps!"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <com.google.android.material.card.MaterialCardView

                            style="@style/Widget.Material3.CardView.Filled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e3eef8">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="15dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/honeygaincase038_yes" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:gravity="start"
                                            android:layout_marginStart="10dp"
                                            android:text="Register to Honeygain"
                                            android:textSize="15dp" />


                                        <ImageView
                                            android:id="@+id/up_down"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/honeygaincase038_up_arrow" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/l1_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone"

                                    >
                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Widget.Material3.CardView.Filled"
                                        app:cardBackgroundColor="#f4f9ff"

                                        >
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="start"
                                            android:layout_margin="20dp"
                                            android:text="1.Set it up. Honeygain can be installed on any Windows, Linux, MacOS, or Android device with a stable Internet connection.
\n\n2.Run Honeygain. Once active, Honeygain securely shares your Internet connection, never gaining access to your personal data.
\n\n3.Let it gather. ...
\n\n4.Help businesses. ...
\n\n5.Get paid"
                                            android:textSize="11dp" />
                                    </com.google.android.material.card.MaterialCardView>

                                </LinearLayout>


                            </LinearLayout>




                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            style="@style/Widget.Material3.CardView.Filled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e3eef8">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="15dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/honeygaincase038_yes" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:gravity="start"
                                            android:layout_marginStart="10dp"
                                            android:text="Install the app"
                                            android:textSize="15dp" />


                                        <ImageView
                                            android:id="@+id/up_down1"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/honeygaincase038_up_arrow" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/l2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone"

                                    >
                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Widget.Material3.CardView.Filled"
                                        app:cardBackgroundColor="#f4f9ff"

                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            >
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:gravity="start"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginRight="20dp"
                                                android:layout_marginTop="20dp"
                                                android:text="First, navigate to https://www.honeygain.com and download our application for Windows. After the download finishes, open the Installer. Some web browsers might open Installer after the download is finished automatically. Once Installation Wizards starts up, click Next and follow the installation steps."
                                                android:textSize="11dp" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="horizontal"
                                                android:layout_marginRight="20dp"
                                                android:layout_marginLeft="20dp"
                                                android:layout_marginTop="10dp"
                                                >
                                                <ImageView
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:layout_gravity="center"
                                                    android:src="@drawable/honeygaincase038_windows1" />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center"
                                                    android:gravity="start"
                                                    android:layout_margin="20dp"
                                                    android:text="You have successfully installed the Honeygain app on your device"
                                                    android:textSize="11dp" />
                                            </LinearLayout>


                                        </LinearLayout>

                                    </com.google.android.material.card.MaterialCardView>

                                </LinearLayout>


                            </LinearLayout>




                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView

                            style="@style/Widget.Material3.CardView.Filled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="#e3eef8">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="15dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/honeygaincase038_yes" />

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_weight="1"
                                            android:gravity="start"
                                            android:layout_marginStart="10dp"
                                            android:text="Passive Income – Effortlessly"
                                            android:textSize="15dp" />


                                        <ImageView
                                            android:id="@+id/up_down2"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/honeygaincase038_up_arrow" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/l3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone"

                                    >
                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Widget.Material3.CardView.Filled"
                                        app:cardBackgroundColor="#f4f9ff"

                                        >
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            >

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="start"
                                                android:gravity="start"
                                                android:layout_marginRight="20dp"
                                                android:layout_marginTop="20dp"
                                                android:layout_marginLeft="20dp"
                                                android:text="With Honeygain, you can make money by simply sharing your Internet. Start earning now."
                                                android:textSize="11dp" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:layout_margin="10dp"
                                                >
                                                <TextView
                                                    android:layout_width="35dp"
                                                    android:layout_height="35dp"
                                                    android:background="@drawable/honeygaincase038_round"
                                                    android:textAllCaps="true"
                                                    android:textSize="10dp"
                                                    android:text="P"
                                                    android:gravity="center"
                                                    android:textColor="@color/white"
                                                    android:textStyle="bold"
                                                    android:layout_gravity="center"
                                                    />
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="vertical"
                                                    android:layout_margin="10dp"
                                                    >
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:text="Email Id"
                                                        android:layout_margin="10dp"
                                                        android:textSize="15dp"
                                                        />

                                                </LinearLayout>
                                            </LinearLayout>
                                        </LinearLayout>

                                    </com.google.android.material.card.MaterialCardView>

                                </LinearLayout>


                            </LinearLayout>




                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        style="@style/Theme.honeygain.Lottie4"
                        android:layout_width="200dp"
                        android:layout_height="220dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:id="@+id/z"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="#FFFFB633"
                            android:text="Passive earnings" />

                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:id="@+id/z1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"

                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="#FFFFB633"
                            android:text="Stock gains" />

                        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                            android:id="@+id/z2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:backgroundTint="#FFFFB633"
                            android:text="Rental income" />


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C9E2F6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Factor That Influence How Much You Earn"
                        android:textSize="30dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="section text position: below_section_mark, auto adjust section mark"
                        android:textSize="12sp" />

                    <com.zhouyou.view.seekbar.SignSeekBar
                        android:id="@+id/demo_3_seek_bar_3"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="20dp"

                        app:ssb_auto_adjust_section_mark="true"
                        app:ssb_second_track_color="@color/colorAccent"
                        app:ssb_section_text_position="below_section_mark"
                        app:ssb_show_section_mark="true"
                        app:ssb_show_section_text="true"
                        app:ssb_show_sign="true"
                        app:ssb_show_thumb_text="true"
                        app:ssb_track_color="@color/colorAccent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_margin="10dp"
                            android:src="@drawable/honeygaincase038_loc"></ImageView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:gravity="center_vertical"
                            android:text="Your Location"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:text="Your earning depend on the traffic demand required for our business clients,as the number of users in your area."
                            android:textSize="15dp"></TextView>


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_margin="15dp"
                            android:src="@drawable/honeygaincase038_adre">

                        </ImageView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:text="The Number Of IP Addresses"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:text="The more IP addresses your devices are connected to,the more you can earn."
                            android:textSize="15dp">

                        </TextView>


                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="start"
                            android:layout_margin="15dp"
                            android:src="@drawable/honeygaincase038_speed">

                        </ImageView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:text="Network Ping/Speed"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:text="To hit the sweet spot,aim for a speed of >50Mbps and a ping of 50ms.For more details,feel free To refer to our Help page."
                            android:textSize="15dp">

                        </TextView>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="#ffffff"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:src="@drawable/honeygaincase038_logohoneygain" />

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:text="Move To Further Activity"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <com.airbnb.lottie.LottieAnimationView

                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/arrow"
                        >

                    </com.airbnb.lottie.LottieAnimationView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>