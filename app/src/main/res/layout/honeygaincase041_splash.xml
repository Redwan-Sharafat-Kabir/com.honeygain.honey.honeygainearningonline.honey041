<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include layout="@layout/honeygaincase041_relativelayout100"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/honeygaincase041_splash_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/raani1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/raani"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"

                android:elevation="6dp"
                app:cardCornerRadius="40dp"
                app:strokeColor="#000"
                app:strokeWidth="2dp">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/honeygaincase041_logo">

                </ImageView>

            </com.google.android.material.card.MaterialCardView>


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/raani"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:text="HoneyGain: Task-Based Opportunities"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold">

            </TextView>


        </RelativeLayout>
        <com.airbnb.lottie.LottieAnimationView
            style="@style/Theme.honeygain.Lottie3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@id/raani1"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />
        <ProgressBar
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_alignParentBottom="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/honeygaincase041_progess_gradient_splash"
            android:progress="100"
            android:progressDrawable="@drawable/honeygaincase041_progess_gradient_splash" />


    </RelativeLayout>


</RelativeLayout>